@model PropertyValue

<div class="col-md-3">
    <div class="input-group">
        @Html.TextBox(Model.Property.Name, Model.AsString, Model.Property)
        @*@Html.TextBox(Model.Property.Name, Model.AsString, Model.Property, Model.Property.ControlsAttributes.Merge(new { @class = "form-control numeric", autocomplete = "off" }))*@
    </div>
    <span class="help-block" asp-if="@Model.Property.Description.HasValue()">@Model.Property.Description</span>
</div>
@Html.ValidationMessage(Model.Property.Name)
