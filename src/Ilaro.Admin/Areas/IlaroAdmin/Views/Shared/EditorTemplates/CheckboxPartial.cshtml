@model PropertyValue

<div class="col-md-3">
    <div class="checkbox">
        <label for="@Html.Id(Model.Property.Name)">
            @Model.Property.Display
            @Html.CheckBox(Model.Property.Name, Model.AsBool.GetValueOrDefault(), Model.Property)
        </label>
    </div>
    @Html.Condition(!string.IsNullOrEmpty(Model.Property.Description), () => "<span class=\"description\">" + Model.Property.Description + "</span>")
</div>
@Html.ValidationMessage(Model.Property.Name)
